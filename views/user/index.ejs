        </div>

        <div
          id="reviewFormContainer"
          class="mt-10 p-8 mb-16 bg-gray-100 rounded-lg shadow-xl"
        >
          <h3 class="text-2xl font-bold text-center text-gray-800 mb-6">
            Leave a Review
          </h3>
          <form id="reviewForm" class="space-y-4">
            <div>
              <label
                for="reviewerName"
                class="block text-gray-700 font-medium mb-1"
                >Your Name</label
              >
              <input
                type="text"
                id="reviewerName"
                name="reviewerName"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                required
              />
            </div>
            <div>
              <label
                for="reviewText"
                class="block text-gray-700 font-medium mb-1"
                >Your Review</label
              >
              <textarea
                id="reviewText"
                name="reviewText"
                rows="4"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition duration-300"
            >
              Submit Review
            </button>
          </form>
        </div>
      </section>
    </main>
    <footer
      id="footer"
      class="bg-black flex fixed bottom-0 justify-center shadow-md w-full rounded-b-lg p-4 md:p-6 space-x-8 translate-y-full transition-transform duration-700 ease-in"
    >
      <a
        id="loginBtn"
        href="/login"
        class="px-6 py-3 bg-blue-600 w-full text-lg text-center rounded-full text-white rounded hover:bg-blue-700 transition scale-75 opacity-0 transition-transform transition-opacity duration-500 ease-in-out"
        >Login</a
      >
      <a
        id="signupBtn"
        href="/signup"
        class="px-6 py-3 bg-green-600 w-full text-lg text-center rounded-full text-white rounded hover:bg-green-700 transition scale-75 opacity-0 transition-transform transition-opacity duration-500 ease-in-out"
        >Sign Up</a
      >
    </footer>
    <script src="/js/reviews.js"></script>
    <script>
      window.addEventListener("load", () => {
        // Slide in hero section from left
        const heroSection = document.getElementById("heroSection");
        heroSection.style.opacity = "1";
        heroSection.style.transform = "translateX(0)";

        // Slide up footer
        const footer = document.getElementById("footer");
        footer.style.transform = "translateY(0)";

        // After footer slide up animation ends, animate buttons
        footer.addEventListener(
          "transitionend",
          () => {
            const loginBtn = document.getElementById("loginBtn");
            const signupBtn = document.getElementById("signupBtn");

            [loginBtn, signupBtn].forEach((btn) => {
              btn.style.opacity = "1";
              btn.style.transform = "scale(1)";
            });
          },
          { once: true }
        );

        // Swiper for reviews (fix for all browsers and ensure cardWidth is correct)
        const reviewsDisplay = document.getElementById("reviewsDisplay");
        const reviewCards = reviewsDisplay.querySelectorAll(".swiper-review");
        const leftBtn = document.getElementById("reviewLeft");
        const rightBtn = document.getElementById("reviewRight");

        function getCardWidth() {
          if (reviewCards.length === 0) return 320;
          const style = window.getComputedStyle(reviewCards[0]);
          const marginRight = parseInt(style.marginRight) || 24;
          return reviewCards[0].offsetWidth + marginRight;
        }

        leftBtn.addEventListener("click", function () {
          reviewsDisplay.scrollBy({
            left: -getCardWidth(),
            behavior: "smooth",
          });
        });
        rightBtn.addEventListener("click", function () {
          reviewsDisplay.scrollBy({ left: getCardWidth(), behavior: "smooth" });
        });
      });
    </script>
  </body>
